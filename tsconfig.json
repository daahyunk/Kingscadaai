{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "server/**/*.ts"]
}

